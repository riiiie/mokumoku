<div class="pt-5 pb-5">
  <div class="container">
    <div class="card">
      <!-- Card header -->
      <div class="card-header">
        <h3 class="mb-0">プロフィール</h3>
      </div>
      <!-- Card body -->
      <div class="card-body">

      <div class="d-lg-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center mb-4 mb-lg-0">
          <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
            <div class="ms-3">
              <h4 class="mb-3"><%= @user.name %></h4>
            </div>
        </div>
      </div>
      <div class="mt-3">
        <% if current_user.following?(@user) %>
          <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
        <% end %>
      </div>
      <hr class="my-5">
      <div>
        <!-- Form -->
        <div class="mb-3">
          <p class="form-label">Hobby</p>
          <hr>
          <p class="accordion-body"><%= @user.hobby %></p>
        </div>
        <div class="mb-3">
          <p class="form-label">Profile</p>
          <hr>
          <p class="accordion-body"><%= @user.profile %></p>
        </div>
      </div>
    </div>
  </div>
</div>

